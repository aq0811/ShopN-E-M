<%- include('../partials/header') %>
<div class="d-flex flex-lg-row flex-column" style="
    justify-content: center;
    width: 100%;
    gap: 20px;
    padding: 0px 20px;
">
    <!-- side bar -->
    <div class="col-lg-3 col-12" style="
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        gap: 10px;
        min-height: 500px;
    ">
        <a href="/management"
            class="btn <%= path === '/management' ? "btn-dark" : "btn-light" %>"
            style="width: 100%; text-align: center;">
            General
        </a>
        <a href="/management/account"
            class="btn <%= path.startsWith('/management/account') ? "btn-dark" : "btn-light" %>"
            style="width: 100%; text-align: center;">
            Account
        </a>
        <a href="/management/product"
            class="btn <%= path.startsWith('/management/product') ? "btn-dark" : "btn-light" %>"
            style="width: 100%; text-align: center;">
            Product
        </a>
        <a href="/management/category"
            class="btn <%= path.startsWith('/management/category') ? "btn-dark" : "btn-light" %>"
            style="width: 100%; text-align: center;">
            Category
        </a>
        <a href="/management/brand"
            class="btn <%= path.startsWith('/management/brand') ? "btn-dark" : "btn-light" %>"
            style="width: 100%; text-align: center;">
            Brand
        </a>
    </div>
    <div class="col-lg-9 col-12" style="
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
    ">
        <%- body %>
    </div>
</div>
<%- include('../partials/footer') %>