        <button type="submit" class="btn btn-link">OPPO</button>
        <input type="hidden" name="brands" value="Vivo" />
        <button type="submit" class="btn btn-link">Vivo</button>
        <input type="hidden" name="brands" value="Realme" />
        <button type="submit" class="btn btn-link">Realme</button>
        <input type="hidden" name="brands" value="ASUS" />
        <button type="submit" class="btn btn-link">ASUS</button>
        <input type="hidden" name="brands" value="" />
        <button type="submit" class="btn btn-link">Xem tất cả</button>
