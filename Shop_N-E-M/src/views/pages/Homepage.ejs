    <!-- Hot-Sale -->
    <section class="hot-sale">
      <div class="countdown">
        <h2>Hot Sale Đang Diễn Ra</h2>
        <div id="timer">
          <span id="days">00</span>
          <p style="font-size: 30px;">:</p>
          <span id="hours">00</span>
          <p style="font-size: 30px;">:</p>
          <span id="minutes">00</span>
          <p style="font-size: 30px;">:</p>
          <span id="seconds">00</span>
        </div>
      </div>
      <div class="products">
        <h2>Sản Phẩm Hot</h2>
        <div class="product">
          <img src="/path/to/your-gif1.gif" alt="Sản phẩm 1">
          <p>Sản phẩm 1</p>
          <span class="price">1,000,000 VNĐ</span>
        </div>
        <div class="product">
          <img src="/path/to/your-gif2.gif" alt="Sản phẩm 2">
          <p>Sản phẩm 2</p>
          <span class="price">1,500,000 VNĐ</span>
        </div>
        <!-- Thêm nhiều sản phẩm khác ở đây -->
      </div>
    </section>
    <script>
      const saleEndDate = <%= saleEndDate %>;

      function updateCountdown() {
        const now = new Date().getTime();
        const distance = saleEndDate - now;

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        document.getElementById("days").innerHTML = days;
        document.getElementById("hours").innerHTML = hours;
        document.getElementById("minutes").innerHTML = minutes;
        document.getElementById("seconds").innerHTML = seconds;

        if (distance < 0) {
          clearInterval(interval);
          document.getElementById("timer").innerHTML = "Hết thời gian!";
        }
      }

      const interval = setInterval(updateCountdown, 1000);
    </script>
    <!-- End Hot-Sale -->
